doctype html
html
  head
    meta(charset="utf-8")
    title D3.js Sample
    style.
        .bar {
          fill: steelblue;
        }
        .axis text {
          font: 10px sans-serif;
        }

        .axis path,
        .axis line {
          fill: none;
          stroke: #000;
          shape-rendering: crispEdges;
        }

        .x.axis path {
          display: none;
        }
  body
    svg.chart
    script(src="http://d3js.org/d3.v3.min.js" charset="utf-8")
    script(src="main.js" charset="utf-8")